# ROMS - Recruitment Operations Management System

## Environment Variables Template
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=roms_db
DB_USER=roms_user
DB_PASSWORD=roms_password

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=MySecretKeyForJWTTokenGenerationMustBe32CharactersLongOrMore
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# AWS S3 Configuration
AWS_S3_BUCKET=roms-documents
AWS_REGION=us-east-1
AWS_ACCESS_KEY=your-access-key
AWS_SECRET_KEY=your-secret-key

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILE=dev

# ROMS Business Rules
ROMS_PASSPORT_MIN_VALIDITY_MONTHS=6
ROMS_DOCUMENT_MAX_SIZE_MB=5
ROMS_DOCUMENT_ALLOWED_TYPES=PDF,JPEG,JPG,PNG
ROMS_S3_PRESIGNED_URL_DURATION=300

# Email Configuration (Phase 3)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SMS Configuration (Phase 3)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=ROMS

# M-Pesa Configuration (Phase 3)
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_PASSKEY=your-passkey
MPESA_SHORTCODE=your-shortcode
